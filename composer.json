{
    "name": "inspiredminds/contao-pdf-generation",
    "description": "Allows you to create a PDF for a complete Contao page.",
    "type": "contao-bundle",
    "license": "LGPL-3.0-or-later",
    "homepage": "https://github.com/inspiredminds/contao-pdf-generation",
    "authors": [
        {
            "name": "Fritz Michael Gschwantner",
            "email": "fmg@inspiredminds.at",
            "role": "Developer"
        }
    ],
    "support": {
        "issues": "https://github.com/inspiredminds/contao-pdf-generation/issues",
        "source": "https://github.com/inspiredminds/contao-pdf-generation",
        "forum": "https://community.contao.org/de"
    },
    "funding": [
        {
            "type": "github",
            "url": "https://github.com/sponsors/fritzmg"
        }
    ],
    "require": {
        "php": ">=7.4",
        "contao/core-bundle": "^4.13 || ^5.0",
        "symfony/config": "^5.4 || ^6.4 || ^7.1",
        "symfony/dependency-injection": "^5.4 || ^6.4 || ^7.1",
        "symfony/event-dispatcher": "^5.4 || ^6.4 || ^7.1",
        "symfony/http-foundation": "^5.4 || ^6.4 || ^7.1",
        "symfony/http-kernel": "^5.4 || ^6.4 || ^7.1",
        "mpdf/mpdf": "^8.2"
    },
    "autoload": {
        "psr-4": {
            "InspiredMinds\\ContaoPdfGeneration\\": "src/"
        }
    },
    "extra": {
        "contao-manager-plugin": "InspiredMinds\\ContaoPdfGeneration\\ContaoManager\\Plugin"
    },
    "require-dev": {
        "contao/easy-coding-standard": "^6.0",
        "contao/rector": "^1.0"
    },
    "config": {
        "allow-plugins": {
            "contao-components/installer": true,
            "php-http/discovery": false,
            "dealerdirect/phpcodesniffer-composer-installer": true,
            "contao-community-alliance/composer-plugin": true
        }
    }
}
